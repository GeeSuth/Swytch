@using RazorLight

@{
    Layout = "Layout.cshtml";
}

<h1>Favorite Books</h1>
<div class="book-collection">

    <!-- Book 1 -->
    <div class="book-card">
        <img src="https://example.com/book1.jpg" alt="Book 1 Image">
        <h2>The Great Gatsby</h2>
        <p>Year: 1925</p>
        <p class="rating">Rating: ★★★★★</p>
        <button class="btn edit-btn" onclick="editBook(1)">Edit</button>
        <button class="btn delete-btn" onclick="deleteBook(1)">Delete</button>
    </div>

    <!-- Book 2 -->
